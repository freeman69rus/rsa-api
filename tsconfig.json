{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es6"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "typeRoots": ["env.d.ts", "./node_modules/@types"],
    "baseUrl": "./"
  },
  "include": [
    "./src/**/*.ts"
  ]
}